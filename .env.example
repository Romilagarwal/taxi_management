# =============================================================================
# TAXI MANAGEMENT SYSTEM - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Render deployment, add these in the Environment tab

# =============================================================================
# APPLICATION CONFIG
# =============================================================================
APP_URL=https://advancedentalclinic.me
PORT=10000

# Flask secret key (generate a random string)
SECRET_KEY=your-super-secret-key-here

# =============================================================================
# DATABASE CONFIG (PostgreSQL)
# =============================================================================
# For Render: Use the Internal Database URL from your PostgreSQL service
DB_HOST=localhost
DB_NAME=taxi_management
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_PORT=5432

# Or use DATABASE_URL for Render's managed PostgreSQL
# DATABASE_URL=postgres://user:password@host:5432/dbname

# =============================================================================
# EMAIL CONFIG (SMTP)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# WHATSAPP API (Meta Business)
# =============================================================================
META_ACCESS_TOKEN=your-meta-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# =============================================================================
# ADMIN CONFIG
# =============================================================================
ADMIN_EMAIL=admin@yourcompany.com
